[Unit]
Description=Floppyfy NFC Music Service
After=network.target sound.target

[Service]
Type=simple
User=raspberry
WorkingDirectory=/home/raspberry/floppyfy
ExecStart=/home/raspberry/floppyfy/venv/bin/python3 src/main.py
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
